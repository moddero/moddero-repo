<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/article/create">
            <fieldset>
                <legend>New Clothing Type</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" form="articleTitle">Type of clothing</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Type of clothing" name="title" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent">Description</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="content" required>
                        </textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent">Image URL</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleImageUrl" rows="5" name="imageUrl" required>
                        </textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="article_tags">Price</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="article_tags"
                               placeholder="Price"
                               name="tagNames">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" form="articleBrand">Brand name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleBrand" placeholder="Brand name" name="brand" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="category">Category</label>
                    <div class="col-sm-6">
                        <select class="form-control" id="select" name="category">
                            {{#each categories}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <button type="reset" class="btn btn-default">Cancel</button>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>