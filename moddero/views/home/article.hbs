<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-3">
                <article>
                    <header>
                        <a href="/article/details/{{this.id}}" class="btn btn-default btn-lg btn-block">
                            {{ this.title }}
                            <br />
                            <img src="{{this.imageUrl}}" width="222" height="233"/>
                        <p>
                            <div class="pull-left">
                            {{this.brand}}
                            </div>
                            <div class="pull-right">
                                {{#each this.tags }}
                                    {{ this.name }} lv.
                                {{/each}}
                            </div>
                            <br />
                        </p>

                        </a>
                    </header>
                    <footer>
                        <br />
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
</div>